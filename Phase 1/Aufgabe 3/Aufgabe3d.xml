		</Bilder>
	
		<Zutaten portionen="1">
	
			<Zutatengruppe>
				<Zutat>
					<Zutatname>Ei(er)</Zutatname>
					<Menge mengeneinheit="" anzahl="6"/>
				</Zutat>
				<Zutat>
					<Zutatname>Zucker, braun</Zutatname>
					<Menge mengeneinheit="g" anzahl="180"/>
				</Zutat>
				<Zutat>
					<Zutatname>Honig</Zutatname>
